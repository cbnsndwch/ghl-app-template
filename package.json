{
    "name": "@cbnsndwch/ghl-app",
    "description": "A base template for full stack HighLevel Marketplace apps",
    "version": "0.3.6",
    "license": "MIT",
    "private": true,
    "repository": "https://github.com/cbnsndwch/ghl-app",
    "author": {
        "name": "Sergio Leon",
        "url": "https://www.cbnsndwch.io"
    },
    "workspaces": {
        "packages": [
            "apps/*",
            "libs/*"
        ]
    },
    "scripts": {
        "postinstall": "turbo run build",
        "clean": "turbo run clean",
        "build": "turbo run build",
        "format": "turbo run format",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "test": "turbo run test",
        "pub": "turbo run pub",
        "vmajor": "pnpm -r exec pnpm version major",
        "vminor": "pnpm -r exec pnpm version minor",
        "vpatch": "pnpm -r exec pnpm version patch",
        "clog": "conventional-changelog -p angular -i CHANGELOG.md -o changelog-temp.md"
    },
    "devDependencies": {
        "change-case": "^5.4.4",
        "conventional-changelog-cli": "^4.1.0",
        "http-server": "^14.1.1",
        "npm-check-updates": "^16.14.20",
        "turbo": "latest"
    },
    "packageManager": "pnpm@9.0.0"
}
